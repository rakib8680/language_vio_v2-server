generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @default(uuid())
  email      String      @unique
  password   String
  role       USER_ROLE   @default(USER)
  status     USER_STATUS @default(ACTIVE)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  student    Student?
  instructor Instructor?
  admin      Admin?

  @@map("users")
}

model Student {
  id            String  @id @default(uuid())
  name          String
  email         String  @unique
  age           Int?
  gender        GENDER?
  image         String?
  contactNumber String?
  user          User    @relation(references: [email], fields: [email])
  cart          Cart[]

  @@map("students")
}

model Instructor {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  age           Int?
  gender        GENDER?
  image         String?
  contactNumber String?
  user          User      @relation(references: [email], fields: [email])
  classes       Classes[]
}

model Admin {
  id            String  @id @default(uuid())
  name          String
  email         String  @unique
  age           Int?
  gender        GENDER?
  image         String?
  contactNumber String?
  user          User    @relation(references: [email], fields: [email])
}

model Classes {
  id               String        @id @default(uuid())
  name             String
  image            String?
  description      String?
  price            Float
  availableSeats   Int
  enrolledStudents Int
  type             COURSE_TYPE   @default(FREE)
  status           COURSE_STATUS @default(PENDING)
  isDeleted        Boolean       @default(false)
  instructorId     String
  instructor       Instructor    @relation(fields: [instructorId], references: [id])
  cart             Cart[]

  @@map("classes")
}

model Cart {
  id        String @id @default(uuid())
  studentId String
  classId   String

  isPaid    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  student Student @relation(fields: [studentId], references: [id])
  class   Classes @relation(fields: [classId], references: [id])

  @@map("cart")
}

// enums 
enum USER_ROLE {
  USER
  ADMIN
  INSTRUCTOR
}

enum USER_STATUS {
  ACTIVE
  BLOCKED
}

enum COURSE_TYPE {
  FREE
  PAID
}

enum COURSE_STATUS {
  PENDING
  APPROVED
  DENIED
}

enum GENDER {
  MALE
  FEMALE
}
